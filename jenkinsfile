pipeline {
    agent none  
     environment {
        TEST = "VALUE1"
        TEST1 = "VALUE2"
        TEST2 =  "VALUE3"
     }
     parameters {
                   booleanParam(name: 'checkout', defaultValue: true, description: 'Toggle this value')
                    booleanParam(name: 'build', defaultValue: false, description: 'Toggle this value')
                    booleanParam(name: 'test', defaultValue: true, description: 'Toggle this value')
     }
    stages {
        
         stage('checkout') {
              agent {
            label slave_1
        }

            steps {
                
            

                sh '''

                echo "$TEST"
                  echo "this checkout stage"
                  '''
            }
        }
        stage('build') {
              agent {
            label slave_1
        }

            steps {
                   echo "$TEST1"
                    echo "$TEST2"
                  echo "this is buld stage check syntax"
            }
        }
        stage('test') {
              agent {
            label slave_2
        }

            steps {
                sh '''
                touch  gcc.txt
                 
                 chmod 777 gcc.txt

                 ls -lrt
      

                '''
            }
        }
    }
}